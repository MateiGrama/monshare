<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="monshare.Pages.ChatPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand">
            <ScrollView HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                <StackLayout x:Name="chatLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"/>
            </ScrollView>
            <StackLayout Orientation="Horizontal" Grid.Row="1" Padding="10,0" BackgroundColor="#EFEFEF" VerticalOptions="EndAndExpand">
                <Entry 
                x:Name="messageEntry"
			    HorizontalOptions="FillAndExpand" 
				HeightRequest="25" 
				Placeholder="Message" />
                <Button 
				Text="Send" 
                Clicked="SendButtonPressed"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>